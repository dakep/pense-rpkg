## Use the R_HOME indirection to support installations of multiple R version
PKG_LIBS = $(LAPACK_LIBS) $(BLAS_LIBS) $(FLIBS) @OPENMP_CFLAGS@

PKG_CFLAGS= -D__STDC_LIMIT_MACROS @RESTRICT_CFLAGS@ @OPENMP_CFLAGS@
PKG_CXXFLAGS= -D__STDC_LIMIT_MACROS -DARMA_DONT_USE_FORTRAN_HIDDEN_ARGS @RESTRICT_CXXFLAGS@ @OPENMP_CXXFLAGS@
